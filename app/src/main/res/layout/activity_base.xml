<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:orientation="vertical">
    
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="#000000"
            android:text="JNI 基础" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textAllCaps="false"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#000000"
            android:text="获取C++字符串"
            android:onClick="onTest1"/>
        
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textAllCaps="false"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#000000"
            android:text="改变属性"
            android:onClick="onTest2"/>
        
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textAllCaps="false"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#000000"
            android:text="改变静态属性"
            android:onClick="onTest3"/>
        
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textAllCaps="false"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#000000"
            android:text="修改Java私有变量"
            android:onClick="onTest4"/>
        
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textAllCaps="false"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#000000"
            android:text="调用java方法"
            android:onClick="onTest5"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textAllCaps="false"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#000000"
            android:text="JNI数组操作"
            android:onClick="onTest6"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textAllCaps="false"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#000000"
            android:text="JNI对象操作"
            android:onClick="onTest7"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textAllCaps="false"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#000000"
            android:text="JNI创建对象"
            android:onClick="onTest8"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textAllCaps="false"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#000000"
            android:text="测试引用"
            android:onClick="onTest9"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textAllCaps="false"
            android:gravity="center"
            android:textSize="12sp"
            android:textColor="#000000"
            android:text="释放全局引用"
            android:onClick="onTest10"/>

    </LinearLayout>

</ScrollView>